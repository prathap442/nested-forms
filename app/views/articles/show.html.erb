   <div class="row">

   	<!-- Post Content Column -->
   	<div class="col-lg-8">

   		<!-- Title -->
   		<h1 class="mt-4"><%= @article.title %></h1>

   		<!-- Author -->
   		<p class="lead">
   			in
   			<%= link_to @article.category.name, @article.category %>
   		</p>
   		<% if (user_signed_in?) && (can? :update, @article) %>
   		<%= link_to "edit", edit_article_path(@article.id) %>
   		<% end %> 
   		<% if (user_signed_in?) && (can? :destroy, @article) %>
   		<%= link_to "delete", article_path(@article.id),name: :delete,data: {confirm: "Are you sure?"} %>
   		<% end %>
   		<hr>

   		<!-- Date/Time -->
   		<p>Posted on <%= @article.published_date.strftime("%B %d %Y %H: %M %p") %></p>

   		<hr>

   		<!-- Preview Image -->
   		<%= image_tag(@article.cover, size: "900x300", class: "img-fluid rounded") %>

   		<hr>

   		<!-- Post Content -->
   		<p><%= @article.body %></p>
   		<hr>
   		<!-- Single Comment -->
   		<% if @article.comments.empty? %>
   			<p>No comments found. Be the first person to comment.</p>
   		<% else %>
	   		<h3>Listing Comments</h3>
	   		<% @article.comments.each do |comment| %>
	   		<div class="media mb-4">
	   			<img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
	   			<div class="media-body">
	   				<h5 class="mt-0"><%=comment.user.email %></h5>
	   				<%= comment.body %>
	   				<% if (user_signed_in?) && (can? :destroy, comment)%>
   						<%= link_to "Destroy", comment_path(comment.id), method: :delete, data: {confirm: "Are you sure want to delete this comment"} %>
   					<% end %>
   					<% if (user_signed_in?) && (can? :update, comment) %> | <%= link_to "Edit", edit_comment_path(comment.id) %><br/>
   					<% end %>
	   			</div>
	   		</div>
	   		<% end %>
   		<% end %>

   		<hr>

   		<!-- Comments Form -->
   		<div class="card my-4">
   			<h5 class="card-header">Leave a Comment:</h5>
   			<div class="card-body">
   				<%= form_for @comment do |f| %>
   				<%= f.hidden_field :article_id, value: @article.id %><br/>
   				<div class="form-group">
   					<%= f.text_area :body, class: "form-control" %>
   				</div>
   				<%=f.submit "Add Comment", class: "btn btn-primary"%>
   				<% end %>
   			</div>
   		</div>

   	</div>

   	<!-- Sidebar Widgets Column -->
   	<div class="col-md-4">

   		<!-- Search Widget -->
   		<div class="card my-4">
   			<h5 class="card-header">Search</h5>
   			<div class="card-body">
   				<div class="input-group">
   					<input type="text" class="form-control" placeholder="Search for...">
   					<span class="input-group-btn">
   						<button class="btn btn-secondary" type="button">Go!</button>
   					</span>
   				</div>
   			</div>
   		</div>

   		<!-- Categories Widget -->
   		<div class="card my-4">
   			<h5 class="card-header">Categories</h5>
   			<div class="card-body">
   				<div class="row">
   					<div class="col-lg-6">
   						<ul class="list-unstyled mb-0">
   							<li>
   								<a href="#">Web Design</a>
   							</li>
   							<li>
   								<a href="#">HTML</a>
   							</li>
   							<li>
   								<a href="#">Freebies</a>
   							</li>
   						</ul>
   					</div>
   					<div class="col-lg-6">
   						<ul class="list-unstyled mb-0">
   							<li>
   								<a href="#">JavaScript</a>
   							</li>
   							<li>
   								<a href="#">CSS</a>
   							</li>
   							<li>
   								<a href="#">Tutorials</a>
   							</li>
   						</ul>
   					</div>
   				</div>
   			</div>
   		</div>

   		<!-- Side Widget -->
   		<div class="card my-4">
   			<h5 class="card-header">Side Widget</h5>
   			<div class="card-body">
   				You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
   			</div>
   		</div>

   	</div>

   </div>
   <!-- /.row -->


   <h2><%= @article.title %></h2><br/>

   

   <% if @article.cover?%>
   <%= image_tag(@article.cover.url, size: "250x250") %><br/>
   <% end %>
   <%#= image_tag(@article.feature_image_url, size: "250x250") %>
   <p><%= @article.body %></p>
   <p> Published date: <%= @article.published_date %></p>
   <p>is-published:<%= @article.is_published %></p>
   <% par_category = Category.find(@article.category_id) %>
   <p><%= link_to par_category.name, category_path(par_category.id) %></p>


   <% if @article.comments.empty? %>
   <p>No comments found. Be the first person to comment.</p>
   <% else %>
   <h3>Listing Comments</h3>
   <ol>
   	<% @article.comments.each do |comment| %>
   	<li><%= comment.body %></li>
   		<% end %>
   	</ol>
   	<% end %>

   	<h3>Add Comment</h3>
   	<%= form_for @comment do |f| %>
   	<label for="comment_body">Body:</label><br/>
   	<%= f.text_area :body %><br/>
   	<%= f.hidden_field :article_id, value: @article.id %><br/>
   	<%= f.submit "Add Comment" %>
   	<% end %>