<%= form_with(model: item, local: true) do |form| %>
    <% if item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
  
        <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :item_name %>
    </div>
  
    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price, id: :item_price %>
    </div>
    <%= form.fields_for :item_information,(form.object.item_information) do |p|%>
      <%@item_keys.each do |item_key|%>
        <%=p.label item_key.to_sym%>
        <%=p.text_field item_key.to_sym,value: item.item_information[item_key]%>
      <%end%>  
    <%end%>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  