<%= form_for(item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :item_price %>
  </div>

  <%= form.fields_for :item_information,Hash.new do |p|%>
    <%=p.label :infoa%> 
    <%=p.text_field :infoa%>
    <%=p.label :infob%>
    <%=p.text_field :infob%>
  <%end%>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
